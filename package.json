{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "backend-boilerplate",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts --type-check",
    "start:debug": "yarn start --debug",
    "start:prod": "TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register -r source-map-support/register build/app",
    "start:watch": "nodemon",
    "build": "tsc --pretty -p tsconfig.json",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:cov": "NODE_ENV=test jest --coverage --coverageDirectory ./coverage",
    "test:watch": "NODE_ENV=test jest --watch --onlyChanged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "apollo-server-koa": "^2.10.1",
    "aws-sdk": "^2.601.0",
    "bcrypt": "^4.0.1",
    "dataloader": "^2.0.0",
    "dayjs": "^1.8.23",
    "dotenv": "^8.2.0",
    "graphql": "^14.6.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-router": "^8.0.8",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "typeorm-typedi-extensions": "^0.2.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/ip": "^1.1.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/koa": "^2.11.3",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.4.0",
    "@types/node": "^13.11.1",
    "@types/pg": "^7.14.3",
    "@types/yargs": "^15.0.4",
    "apollo-server-testing": "^2.12.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
