{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "backend-boilerplate",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts --type-check",
    "start:watch": "nodemon",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:cov": "NODE_ENV=test jest --coverage --coverageDirectory ./coverage",
    "test:watch": "NODE_ENV=test jest --watch --onlyChanged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-koa": "^2.2.6",
    "bcrypt": "^3.0.3",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "graphql": "^14.0.2",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "type-graphql": "^0.16.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.9",
    "typeorm-typedi-extensions": "^0.2.1",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.0",
    "@types/graphql": "^14.0.3",
    "@types/ip": "^0.0.32",
    "@types/jest": "^23.3.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.47",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.15",
    "@types/pg": "^7.4.11",
    "@types/yargs": "^12.0.5",
    "apollo-server-testing": "^2.3.1",
    "graphql-tag": "^2.10.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
