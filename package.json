{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "backend-boilerplate",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/app.ts --type-check",
    "start:debug": "yarn start --debug",
    "start:prod": "TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register -r source-map-support/register build/app",
    "start:watch": "nodemon",
    "build": "tsc --pretty -p tsconfig.json",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:cov": "NODE_ENV=test jest --coverage --coverageDirectory ./coverage",
    "test:watch": "NODE_ENV=test jest --watch --onlyChanged",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-koa": "^2.9.0",
    "aws-sdk": "^2.518.0",
    "bcrypt": "^3.0.3",
    "dataloader": "^1.4.0",
    "dayjs": "^1.8.16",
    "dotenv": "^6.2.0",
    "graphql": "^14.5.3",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.16",
    "typeorm-typedi-extensions": "^0.2.3",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.0",
    "@types/ip": "^0.0.32",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.40",
    "@types/lodash": "^4.14.138",
    "@types/node": "^10.12.15",
    "@types/pg": "^7.11.0",
    "@types/yargs": "^12.0.5",
    "apollo-server-testing": "^2.3.1",
    "graphql-tag": "^2.10.1",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
